// Chess Board

var board = "";
var size = 8;

for (var y = 0; y < size; y++) {
  for (var x = 0; x < size; x++) {
    if ((x + y) % 2 == 0)
      board += "#";
    else
      board += " ";
  }
  board += "\n";
}

console.log(board);


// Chess Board (Alternate Solution)

for (var i = 0; i < 8; i++) {
    if (i % 2 === 0) {
        console.log("# # # # ");
    } else {
        console.log(" # # # #");
    }
}

// every function

var every = function(array, predicate) {
  for (var i=0; i<array.length; i++) {
    if (predicate(array[i]) === false) {
      return false;
    }
  }
  return true;
};

// some function

var some = function(array, predicate) {
  for (var i=0; i<array.length; i++) {
    if (predicate(array[i])) {
      return true;
    }
  }
  return false;
};
